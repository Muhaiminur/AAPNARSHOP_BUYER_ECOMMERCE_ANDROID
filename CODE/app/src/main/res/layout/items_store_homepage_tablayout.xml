<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:id="@+id/items_store_homepage_cardview"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardElevation="0dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/store_homepage_product_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp">

                    <TextView
                        android:id="@+id/store_homepage_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fresh Chinigura Rice"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_m" />

                    <TextView
                        android:id="@+id/store_homepage_available_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="1Kg Packet"
                        android:textColor="@color/text_hint"
                        android:textSize="@dimen/font_s" />


                        <TextView
                            android:id="@+id/store_homepage_product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="120 Taka"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_m"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/store_homepage_search_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="items found for rice 84"
                        android:visibility="gone"
                        android:textColor="@color/app_yellow"
                        android:textSize="@dimen/font_m"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/store_homepage_add_to_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:padding="5dp"
                        android:background="@drawable/button_background_yellow"
                        android:gravity="center"
                        android:text="@string/add_to_cart"
                        android:textSize="@dimen/font_s"
                        android:textColor="@color/black"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:id="@+id/store_homepage_plus_minus"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/store_homepage_minus_button"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/left_half_round_stroke_items_count"
                            android:gravity="center"
                            android:text="@string/add_to_cart_minus"
                            android:textColor="@color/white"
                            tools:ignore="UnusedAttribute" />

                        <EditText
                            android:id="@+id/store_homepage_plus_minus_count"
                            android:layout_width="25dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:background="@android:color/transparent"
                            android:text="1"
                            android:inputType="numberDecimal"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/store_homepage_plus_button"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/right_half_round_stroke_items_count"
                            android:gravity="center"
                            android:text="@string/add_to_cart_plus"
                            android:textColor="@color/black"
                            tools:ignore="UnusedAttribute" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>
