<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="5dp"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    android:id="@+id/lyt_parent">
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardviewDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="2dp">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">
        <ImageView
            android:id="@+id/thumb"
            android:contentDescription="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:textAllCaps="true"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="7sp"
            android:padding="2dp"
            android:text="Rahamat General Store"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2dp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/ic_star"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shop_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="7sp"
            android:textStyle="bold"
            android:text="4.1/"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dashboard_color"
            android:textSize="7sp"
            android:layout_marginEnd="2dp"
            android:text="5"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shop_rating_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dashboard_color"
            android:textSize="7sp"
            android:text="(100)"/>



    </LinearLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/shop_type"
        android:layout_width="wrap_content"
        android:background="@drawable/rounded_corner"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textSize="7sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Grocery Shop"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_minimum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="7sp"
        android:textColor="@color/dashboard_color"
        android:padding="2dp"
        android:text="Minimum"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/minimum_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textColor="@color/black"
        android:textSize="7sp"
        android:textStyle="bold"
        android:text="100BDT"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:padding="2dp"
            android:textColor="@color/dashboard_color"
            android:text="Banani, Dhaka"/>



    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/average_delivery_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="7sp"
        android:padding="2dp"
        android:textColor="@color/dashboard_color"
        android:text="Average Delivery Time"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/average_delivery_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textSize="7sp"
                android:textColor="@color/colorPrimary"
                android:text="30MIN"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/free_delivery"
                android:layout_width="wrap_content"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/black"
                android:layout_height="wrap_content"
                android:textSize="7sp"
                android:padding="1dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Free Delivery"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/delivery_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/dashboard_color"
            android:textSize="7sp"
            android:text="Delivery Charge"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/delivery_charge_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/colorPrimary"
            android:textSize="7sp"
            android:text="30BDT"/>

    </LinearLayout>


</LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opening Hour 9am-10pm"
        android:background="@color/background_theme"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="10sp"
        android:singleLine="true"
        android:textColor="@color/background_shape"/>
</LinearLayout>