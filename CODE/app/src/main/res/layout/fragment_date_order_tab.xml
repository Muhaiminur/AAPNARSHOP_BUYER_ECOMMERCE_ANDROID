<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".OrderFragments.DateFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/ash_background_capsul_shape_stroke_settings"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/complete_order_from_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/complete_order_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="15"
                android:paddingStart="10dp"
                android:drawablePadding="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/font_l"
                tools:ignore="RtlSymmetry"
                app:drawableStartCompat="@drawable/ic_calendar" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/complete_order_month_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Th July 2022"
                    android:textSize="@dimen/font_s"/>
                <TextView
                    android:id="@+id/complete_order_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_s"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Wednesday"/>

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="@dimen/font_xxl"
            android:textAllCaps="true"
            android:text="TO"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:id="@+id/complete_order_from_date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:paddingBottom="2dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/complete_order_date2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="15"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/font_l"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/complete_order_month_year2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Th July 2022"
                    android:textSize="@dimen/font_s"/>
                <TextView
                    android:id="@+id/complete_order_day2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_s"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Wednesday"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/order_recycler_view_date"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

</LinearLayout>