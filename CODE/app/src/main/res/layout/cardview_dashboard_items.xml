<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >

<androidx.cardview.widget.CardView
    android:id="@+id/cardviewDashboard2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3"
    android:id="@+id/lyt_parent"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1.7">

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/thumb"
            android:contentDescription="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="@drawable/offer_banner_background_cardview"
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_gravity="end"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/font_s"
            android:text="@string/offer_text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/app_yellow"
            android:padding="2dp"
            android:layout_gravity="bottom"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/font_extra_small"
            android:text="  30  \n Min"
            />

    </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/app_yellow"
            android:padding="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Fee "
                android:padding="1dp"
                android:textStyle="bold"
                android:textSize="@dimen/font_s"
                android:singleLine="true"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30TK"
                android:padding="1dp"
                android:textStyle="bold"
                android:textSize="@dimen/font_s"
                android:singleLine="true"
                android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minimum Buy "
                android:gravity="end"
                android:padding="1dp"
                android:textStyle="bold"
                android:textSize="@dimen/font_s"
                android:singleLine="true"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150TK"
                android:padding="1dp"
                android:textStyle="bold"
                android:textSize="@dimen/font_s"
                android:singleLine="true"
                android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="20dp"
        android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/font_m"
                android:padding="1dp"
                android:text="Rahamat General Store"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shop_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="@dimen/font_m"
            android:textColor="@color/app_yellow"
            android:textStyle="bold"
            android:text="Grocery Shop"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_s"
            android:padding="2dp"
            android:textColor="@color/dashboard_color"
            android:text="Banani, Dhaka"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/ic_star"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/shop_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/font_s"
                android:textStyle="bold"
                android:text="4.1"/>

        </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/tvTitle"
          android:background="@color/app_yellow"
          android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_opening_hour"
            android:padding="2dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/font_s"
            android:singleLine="true"
            android:textColor="@color/white"/>

          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/store_open_close_time"
              android:inputType="textMultiLine"
              android:padding="1dp"
              android:gravity="center"
              android:textStyle="bold"
              android:textSize="@dimen/font_s"
              android:textColor="@color/black"/>

      </LinearLayout>


    </LinearLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>