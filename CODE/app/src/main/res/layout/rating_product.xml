<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:contentDescription="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        app:srcCompat="@drawable/ic_rating_background_shape"
        />

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/product_rating_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_close_black_24dp"
            android:layout_gravity="end"
            android:contentDescription="@string/app_name"
            android:padding="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rating_order_text"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="2dp"
            android:textSize="@dimen/font_xl"/>

        <TextView
            android:id="@+id/rating_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65751247885"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/font_xl"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating_order_placed_on_text"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginEnd="2dp"
        android:textSize="@dimen/font_s"/>
        <TextView
            android:id="@+id/rating_order_placed_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 August 2020 2.20 pm"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/font_s"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/product_quality"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/font_xl"/>

        <RatingBar
            android:id="@+id/product_quality_rating"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="?android:attr/ratingBarStyleIndicator"
            android:theme="@style/RatingBar"
            android:progressTint="@color/app_yellow"
            android:numStars="5"
            android:stepSize="1"
            android:rating="3.0"
            android:isIndicator="false"
            tools:targetApi="lollipop" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/shop_delivery_service"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/font_xl"/>

        <RatingBar
            android:id="@+id/delivery_service_rating"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="?android:attr/ratingBarStyleIndicator"
            android:theme="@style/RatingBar"
            android:progressTint="@color/app_yellow"
            android:numStars="5"
            android:stepSize="1"
            android:rating="3.0"
            android:isIndicator="false"
            tools:targetApi="lollipop" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/shop_owner_behavior"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/font_xl"/>

        <RatingBar
            android:id="@+id/owner_behavior_rating"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="?android:attr/ratingBarStyleIndicator"
            android:theme="@style/RatingBar"
            android:numStars="5"
            android:stepSize="1"
            android:progressTint="@color/app_yellow"
            android:rating="3.0"
            android:isIndicator="false"
            tools:targetApi="lollipop" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/product_packaging"
            android:textColor="@color/black"
            android:textSize="@dimen/font_xl"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/product_packaging_rating"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="?android:attr/ratingBarStyleIndicator"
            android:theme="@style/RatingBar"
            android:numStars="5"
            android:stepSize="1"
            android:progressTint="@color/app_yellow"
            android:rating="3.0"
            android:isIndicator="false"
            tools:targetApi="lollipop" />


    </LinearLayout>

        <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@drawable/rating_comment_box_border"
        android:hint="@string/rating_comment_text"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="@dimen/font_l"
        tools:ignore="Autofill,LabelFor,RtlSymmetry,TextFields" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center">

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_yellow"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="@string/rating_submit_text"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="@dimen/font_xxl" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/red_background_capsul_shape_fill_settings"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/rating_cancel_text"
            android:padding="10dp"
            android:textSize="@dimen/font_xl" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating_footer_message_1"
        android:maxLines="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/text_hint"
        android:textSize="@dimen/font_s"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating_footer_message_2"
        android:maxLines="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/text_hint"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/font_s"/>

        </LinearLayout>

</LinearLayout>

</LinearLayout>
</FrameLayout>
